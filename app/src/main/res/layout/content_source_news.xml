<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:elevation="7dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/news_source_name"
            android:textSize="16dp"
            android:fontFamily="@font/segoeui_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/al_jazeera"
            />
        <TextView
            android:id="@+id/news_source_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lorem_ipsum"
            />
        <Button
            android:id="@+id/bt_news_source_read"
            android:layout_margin="5dp"
            app:backgroundTint="#0091EA"
            android:layout_gravity="right"
            android:layout_width="80dp"
            android:textColor="#ffff"
            android:background="@drawable/btn_backgoround_read"
            android:layout_height="30dp"
            android:textSize="10dp"
            android:text="Read"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>